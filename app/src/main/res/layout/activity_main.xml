<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_red"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-125dp"
                android:layout_marginTop="-15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:src="@drawable/ic_shape_top"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>

            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="-170dp"
                android:src="@drawable/ic_shape_mid" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-85dp"
                android:background="@drawable/ic_shape_bot"
                android:layout_marginTop="280dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="55dp"
                    android:text="@string/welcome"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="40dp"
                    android:text="@string/second_welcome"
                    android:layout_marginLeft="25dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>
            </FrameLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iniciar_sesion"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/dark_red"
                android:background="@drawable/background_button_white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_register_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registrarte"
                android:textColor="@color/white"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/background_button_red"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>